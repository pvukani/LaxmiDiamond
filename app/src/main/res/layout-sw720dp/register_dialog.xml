<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/okdialog"
        android:orientation="vertical">

        <Custom.Custom_Font_TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Sign Up to view online stock"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/Blue" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <Custom.Custom_Font_TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.40"
                android:text="Company Name:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Custom.Custom_Edittext
                android:id="@+id/edittext_register_compName"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.60" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <Custom.Custom_Font_TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.40"
                android:text="First Name:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Custom.Custom_Edittext
                android:id="@+id/spin_prefix"
                android:focusableInTouchMode="false"
                android:focusable="false"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:background="@drawable/dropdown_small"
                android:gravity="center"
                android:hint="Mr."
                android:textAppearance="?android:attr/textAppearanceMedium"

                />

            <Custom.Custom_Edittext
                android:id="@+id/edittext_register_fName"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.40" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <Custom.Custom_Font_TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.40"
                android:text="Last Name:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Custom.Custom_Edittext
                android:id="@+id/edittext_register_lName"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.60" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <Custom.Custom_Font_TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.40"
                android:text="User Name:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Custom.Custom_Edittext
                android:id="@+id/edittext_register_userName"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.60" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <Custom.Custom_Font_TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.40"
                android:text="PassWord:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Custom.Custom_Edittext
                android:id="@+id/edittext_register_Pass"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.60"
                android:inputType="textPassword" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <Custom.Custom_Font_TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.40"
                android:text="Retype Password:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Custom.Custom_Edittext
                android:id="@+id/edittext_register_ConforPass"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.60"
                android:inputType="textPassword" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <Custom.Custom_Font_TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.40"
                android:text="E-Mail:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Custom.Custom_Edittext
                android:id="@+id/edittext_register_email"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.60" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <Custom.Custom_Font_TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.40"
                android:text="Phone:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Custom.Custom_Edittext
                android:id="@+id/edittext_register_phone"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.60"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <Custom.Custom_Font_TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.40"
                android:text="Country:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Custom.Custom_Edittext
                android:id="@+id/edittext_register_country"
                android:paddingLeft="8dp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.60"
                android:background="@drawable/long_dropdown"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:singleLine="true"
                android:textColor="#6E6E6E"
                android:textColorHint="#BDBDBD" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <Custom.Custom_Font_TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.40"
                android:text="State:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Custom.Custom_Edittext
                android:id="@+id/edittext_register_state"
                android:layout_width="0dp"
                android:paddingLeft="8dp"
                android:layout_height="50dp"
                android:layout_weight="0.60"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="@drawable/long_dropdown"
                android:clickable="true"
                android:textColor="#6E6E6E"
                android:textColorHint="#BDBDBD" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <Custom.Custom_Font_TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.40"
                android:text="City:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Custom.Custom_Edittext
                android:id="@+id/edittext_register_city"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.60" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Custom.Custom_Button
                android:id="@+id/btn_register_register"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/greenbutton"
                android:gravity="center"
                android:text="Register"
                android:textColor="#ffffff" />

            <Custom.Custom_Button
                android:id="@+id/btn_register_cancel"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/button_qs"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="#ffffff" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>