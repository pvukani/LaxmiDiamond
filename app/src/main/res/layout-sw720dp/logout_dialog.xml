<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/okdialog"
        android:orientation="vertical">

        <Custom.Custom_Font_TextView
            android:id="@+id/txt_ok_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/Blue"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Custom.Custom_Font_TextView
            android:id="@+id/txt_ok_dialog_issue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:padding="10dp"
            android:text="Are you sure for Logout?"
            android:textColor="#000000"
            android:textSize="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#cecece" />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <Custom.Custom_Button
                android:id="@+id/btn_Logout_dialog_yes"
                android:layout_width="0dp"
                android:layout_weight="0.50"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="Yes"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />
            <View
                android:layout_width="2dp"
                android:layout_height="50dp"
                android:background="#cecece"/>

            <Custom.Custom_Button
                android:id="@+id/btn_Logout_dialog_no"
                android:layout_width="0dp"
                android:layout_weight="0.50"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="No"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>