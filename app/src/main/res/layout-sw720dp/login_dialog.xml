<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/logindialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--<LinearLayout-->
        <!--android:background="@drawable/okdialog"-->
        <!--android:orientation="vertical"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content">-->

    <Custom.Custom_Font_TextView
        android:textColor="@color/Blue"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Please Login to view online stock"
        android:textStyle="bold"
        android:id="@+id/textView" />

    <Custom.Custom_Edittext
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:hint="User Name"
        android:paddingLeft="7dp"
        android:background="@drawable/edittext_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_editText_username" />

    <Custom.Custom_Edittext
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:paddingLeft="7dp"
        android:inputType="textPassword"
        android:hint="PassWord"
        android:background="@drawable/edittext_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_editText_password" />

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Custom.Custom_Button
            android:textColor="#ffffff"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Login"
            android:background="@drawable/greenbutton"
            android:id="@+id/btn_login_login" />

        <Custom.Custom_Button
            android:textColor="#ffffff"
            android:background="@drawable/back_btn_login_dialog"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Cancel"
            android:id="@+id/btn_login_Cancel" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="5dp"
            android:indeterminateDrawable="@drawable/my_progress_indeterminate"
            android:visibility="gone" />
    </LinearLayout>
    <!--</LinearLayout>-->

</LinearLayout>