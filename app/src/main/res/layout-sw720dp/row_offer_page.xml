<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <Custom.Custom_Font_TextView
            android:id="@+id/txt_ofr_no"
            android:layout_width="@dimen/header_small"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textColor="@color/black" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#d1d1d1" />

        <ImageView
            android:id="@+id/img_action"
            android:layout_width="@dimen/header_small"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:src="@drawable/detail"
            />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#d1d1d1" />
        <Custom.Custom_Font_TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/txt_ofr_date"
            android:layout_width="@dimen/header_big"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#d1d1d1"
            />
        <Custom.Custom_Font_TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/txt_ttl_stone"
            android:layout_width="@dimen/header_small"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#d1d1d1"
            />
        <Custom.Custom_Font_TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/txt_ttl_carat"
            android:layout_width="@dimen/header_small"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#d1d1d1"
            />
        <Custom.Custom_Font_TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/txt_avg_disc"
            android:layout_width="@dimen/header_small"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#d1d1d1"
            />
        <Custom.Custom_Font_TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/txt_avg_ctc"
            android:layout_width="@dimen/header_big"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#d1d1d1"
            />
        <Custom.Custom_Font_TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/txt_ttl_usd"
            android:layout_width="@dimen/header_big"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#d1d1d1"
            />
        <Custom.Custom_Font_TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/txt_status"
            android:layout_width="@dimen/header_small"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black" />

    </LinearLayout>
</LinearLayout>